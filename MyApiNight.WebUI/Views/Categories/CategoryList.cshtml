@model List<MyApiNight.WebUI.Dtos.ResultCategoryDto>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br /><br />
        <table class="table table-hover">

            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.CategoryId</th>
                    <th>@item.CategoryName</th>
                    <th><a href="/Categories/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></th>
                    <th><a href="/Categories/UpdateCategory/@item.CategoryId" class="btn btn-danger">Güncelle</a></th>

                </tr>
            }

        </table>
        <a href="/Categories/CreateCategory/" class="btn btn-primary">Yeni Kategori Girişi</a>
    </div>

</form>